{
    "private": true,
    "name": "vlocode-project",
    "packageManager": "pnpm@8.12.1",
    "description": "Vlocode project packages",
    "version": "0.20.0",
    "license": "MIT",
    "author": {
        "name": "Peter van Gulik",
        "email": "peter@curlybracket.nl"
    },
    "publisher": "curlybracket",
    "homepage": "https://github.com/Codeneos/vlocode#readme",
    "categories": [
        "Other"
    ],
    "repository": "https://github.com/codeneos/vlocode.git",
    "bugs": {
        "url": "https://github.com/Codeneos/vlocode/issues",
        "email": "peter@curlybracket.nl"
    },
    "devDependencies": {
        "@lerna-lite/cli": "^1.6.0",
        "@types/fs-extra": "^9",
        "@types/jest": "^28.1.6",
        "@types/node": "^20",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "chalk": "^4.1.2",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.6.1",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "fs-extra": "^9",
        "husky": "^8.0.1",
        "jest": "^29.6.1",
        "jest-junit": "^14.0.0",
        "jest-sonar": "^0.2.12",
        "js-yaml": "^4.1.0",
        "lint-staged": "^13.1.0",
        "log-symbols": "^4.1.0",
        "prettier": "^2.6.2",
        "ts-jest": "^29.1.1",
        "typedoc": "^0.24.8",
        "typedoc-plugin-rename-defaults": "^0.6.5",
        "typescript": "5.1.6"
    },
    "pnpm": {
        "patchedDependencies": {
            "jsforce@1.11.0": "patches/jsforce@1.11.0.patch",
            "fast-glob@3.2.11": "patches/fast-glob@3.2.11.patch",
            "@oclif/command@1.8.16": "patches/@oclif__command@1.8.16.patch",
            "vlocity@1.14.18": "patches/vlocity@1.14.18.patch",
            "@types/jsforce@1.9.42": "patches/@types__jsforce@1.9.42.patch",
            "@salesforce/core@2.37.1": "patches/@salesforce__core@2.33.1.patch",
            "@salesforce/core@3.31.18": "patches/@salesforce__core@3.31.18.patch",
            "typescript@5.1.6": "patches/typescript@5.1.6.patch"
        },
        "allowNonAppliedPatches": true
    },
    "scripts": {
        "build": "pnpm run -r build",
        "pack": "pnpm run build && pnpm run -r pack",
        "clean": "pnpm run -r clean",
        "watch": "pnpm run build && pnpm run -r --parallel --stream --no-bail watch",
        "watch-cli": "pnpm run --filter @vlocode/cli... --parallel --stream --no-bail watch",
        "build-cli": "pnpm run --filter @vlocode/cli... build",
        "pack-cli": "pnpm run --filter \"@vlocode/cli^...\" build && pnpm run --filter @vlocode/cli pack",
        "pack-extension": "pnpm run --filter \"vlocode^...\" build && pnpm run --filter vlocode pack",
        "publish-extension": "pnpm run --filter \"vlocode^...\" build && pnpm run --filter vlocode publish",
        "release-patch": "lerna version patch",
        "release-minor": "lerna version minor",
        "sync-ws-version": "node -e \"fs.writeFileSync('./package.json', JSON.stringify({ ...require('./package.json'), version: require('./lerna.json').version }, undefined, 4));\"",
        "test": "jest",
        "prepare": "husky install",
        "lint": "eslint ./packages/*/src/**/*.ts --ext .ts",
        "docs": "pnpm sync-ws-version && typedoc"
    },
    "resolutions": {
        "@types/fs-extra": "^9",
        "@oclif/command": "1.8.16",
        "@types/node": "^20",
        "moment": ">=2.29.4",
        "fs-extra": "9",
        "js-force": "1.11.0",
        "salesforce-alm": "^52",
        "@salesforce/core@^3": "3.31.18",
        "@salesforce/core@^2": "2.37.1",
        "@types/jsforce": "1.9.42",
        "chalk": "^4.1.2",
        "js-yaml": "^4.1.0",
        "typescript": "5.1.6",
        "xml2js": "^0.5.0"
    },
    "lint-staged": {
        "*.ts": "eslint --fix",
        "*.{md,json,yaml}": "prettier --write"
    }
}
