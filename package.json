{
    "private": true,
    "name": "vlocode-project",
    "packageManager": "yarn@3.2.0",
    "description": "Vlocode project packages",
    "version": "0.16.28",
    "license": "MIT",
    "author": {
        "name": "Peter van Gulik",
        "email": "peter@curlybracket.nl"
    },
    "publisher": "curlybracket",
    "homepage": "https://github.com/Codeneos/vlocode#readme",
    "categories": [
        "Other"
    ],
    "repository": "https://github.com/codeneos/vlocode.git",
    "bugs": {
        "url": "https://github.com/Codeneos/vlocode/issues",
        "email": "peter@curlybracket.nl"
    },
    "devDependencies": {
        "@types/fs-extra": "^9",
        "@types/node": "^16",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "chalk": "^4.1.2",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.6.1",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "fs-extra": "^9",
        "js-yaml": "^4.1.0",
        "log-symbols": "^4.1.0",
        "prettier": ">=2.0.0",
        "typescript": "4.6.4"
    },
    "dependencies": {
        "@milahu/patch-package": "^6.4.11"
    },
    "workspaces": [
        "packages/util",
        "packages/core",
        "packages/salesforce",
        "packages/vlocity-deploy",
        "packages/vscode-extension",
        "packages/cli"
    ],
    "scripts": {
        "build": "yarn workspaces foreach --topological --topological-dev run build",
        "watch": "yarn workspaces foreach -pi -j unlimited run watch",
        "watch-cli": "yarn workspace @vlocode/cli run watch",
        "watch-cli-webpack": "yarn workspace @vlocode/cli run watch-webpack",
        "build-cli": "yarn workspace @vlocode/cli run build",
        "pack-cli": "yarn workspace @vlocode/cli run pack",
        "packall": "yarn workspaces foreach --topological --topological-dev run pack",
        "test": "yarn workspaces foreach --topological --topological-dev run test",
        "postinstall": "patch-package --use-yarn",
        "lint": "eslint ./packages/*/src/**/*.ts",
        "docs": "typedoc",
        "bump": "ts-node ./build/bumpVersion.ts patch"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "typescript"
            ]
        },
        "overrides": {
            "@types/fs-extra": "^9",
            "@oclif/command": "^1.8",
            "@types/node": "^16",
            "@salesforce/core": "2.33.1",
            "typescript": "4.5.4",
            "fs-extra": "9",
            "chalk": "^4.1.2",
            "js-yaml": "^4.1.0"
        }
    },
    "resolutions": {
        "@types/fs-extra": "^9",
        "@oclif/command": "^1.8",
        "@types/node": "^16",
        "@salesforce/core": "2.33.1",
        "fs-extra": "9",
        "chalk": "^4.1.2",
        "js-yaml": "^4.1.0",
        "typescript": "4.6.4"
    }
}
