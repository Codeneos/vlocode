// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "pnpm --filter vlocode watch",
            "isBackground": true,
            "label": "build-extension",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "fileLocation": "absolute",
                    "owner": "typescript",
                    "pattern": [
                        {
                            "regexp": "\\[tsl\\] ERROR in (.*)?\\((\\d+),(\\d+)\\)",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "\\s*TS\\d+:\\s*(.*)",
                            "message": 1
                        }
                    ],
                    "severity": "error",
                    "source": "ts",
                    "background": {
                        "beginsPattern": "starting...",
                        "endsPattern": "finished"
                    }
                }
            ]
        },
        {
            "type": "shell",
            "command": "pnpm --filter @vlocode/cli watch-webpack",
            "isBackground": true,
            "label": "watch-cli-webpack",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                {
                    "fileLocation": "absolute",
                    "owner": "typescript",
                    "pattern": [
                        {
                            "regexp": "\\[tsl\\] ERROR in (.*)?\\((\\d+),(\\d+)\\)",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "\\s*TS\\d+:\\s*(.*)",
                            "message": 1
                        }
                    ],
                    "severity": "error",
                    "source": "ts",
                    "background": {
                        "beginsPattern": "starting...",
                        "endsPattern": "finished"
                    }
                }
            ],
            "dependsOn": ["watch-vlocity-deploy"]
        },
        {
            "label": "watch-cli",
            "type": "shell",
            "problemMatcher": {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceFolder}/packages/cli"]
            },
            "command": "pnpm --filter @vlocode/cli watch",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": ["watch-vlocity-deploy"]
        },
        {
            "label": "watch-vlocity-deploy",
            "type": "shell",
            "problemMatcher": {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceFolder}/packages/vlocity-deploy"]
            },
            "command": "pnpm --filter @vlocode/vlocity-deploy watch",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": ["watch-salesforce"]
        },
        {
            "label": "watch-salesforce",
            "type": "shell",
            "problemMatcher": {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceFolder}/packages/salesforce"]
            },
            "command": "pnpm --filter @vlocode/salesforce watch",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": ["watch-core"]
        },
        {
            "label": "watch-core",
            "type": "shell",
            "problemMatcher": {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceFolder}/packages/core"]
            },
            "command": "pnpm --filter @vlocode/core watch",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": ["watch-util"]
        },
        {
            "label": "watch-util",
            "type": "shell",
            "problemMatcher": {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceFolder}/packages/vlocity-util"]
            },
            "command": "pnpm --filter @vlocode/util watch",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}
