// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "yarn workspace vlocode run watch",
            "isBackground": true,
            "label": "build-extension",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "fileLocation": "absolute",
                    "owner": "typescript",
                    "pattern": [
                        {
                            "regexp": "\\[tsl\\] ERROR in (.*)?\\((\\d+),(\\d+)\\)",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "\\s*TS\\d+:\\s*(.*)",
                            "message": 1
                        }
                    ],
                    "severity": "error",
                    "source": "ts",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "^Webpack: build starting"
                        },
                        "endsPattern": {
                            "regexp": " compiled with "
                        }
                    }
                },
                {
                    "fileLocation": "relative",
                    "owner": "typescript",
                    "pattern": [
                        {
                            "regexp": "WARNING in (.*)",
                            "file": 1
                        },
                        {
                            "regexp": "Module Warning (.*)"
                        },
                        {
                            "regexp": "\\[(\\d+), (\\d+)\\]: (.*)",
                            "line": 1,
                            "column": 2,
                            "message": 3
                        }
                    ],
                    "severity": "warning",
                    "source": "tslint",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "^Webpack: build starting"
                        },
                        "endsPattern": {
                            "regexp": " compiled with "
                        }
                    }
                }
            ]
        },
        {            
            "label": "watch-cli-webpack",
            "type": "shell",
            "command": "yarn watch-cli-webpack",
            "isBackground": false,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            }
        },
        {            
            "label": "watch-cli",
            "type": "shell",
            "problemMatcher":"$tsc-watch",
            "command": "yarn workspace @vlocode/cli tsc -w",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "watch-vlocity-deploy"
            ]
        },
        {            
            "label": "watch-vlocity-deploy",
            "type": "shell",
            "problemMatcher":"$tsc-watch",
            "command": "yarn workspace @vlocode/vlocity-deploy tsc -w",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "watch-salesforce"
            ]
        },
        {            
            "label": "watch-salesforce",
            "type": "shell",
            "problemMatcher":"$tsc-watch",
            "command": "yarn workspace @vlocode/salesforce tsc -w",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "watch-core"
            ]
        },
        {            
            "label": "watch-core",
            "type": "shell",
            "problemMatcher":"$tsc-watch",
            "command": "yarn workspace @vlocode/core tsc -w",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "watch-util"
            ]
        },
        {            
            "label": "watch-util",
            "type": "shell",
            "problemMatcher":"$tsc-watch",
            "command": "yarn workspace @vlocode/util tsc -w",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}