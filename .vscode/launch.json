// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (vscode-extension)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--trace-deprecation",
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/core/lib/**/*.js",
                "${workspaceFolder}/packages/salesforce/lib/**/*.js",
                "${workspaceFolder}/packages/util/lib/**/*.js",
                "${workspaceFolder}/packages/vlocity-deploy/lib/**/*.js",
                "${workspaceFolder}/packages/vscode-extension/out/**/*.js"
            ], 
            "skipFiles": [
                "<node_internals>/**/*.js",
                "async_hooks.js",
                "inspector_async_hook.js"
            ],
            "preLaunchTask": "build-extension",
            "smartStep": true,
            "stopOnEntry": false,
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/packages/cli/dist/cli.js",
            "name": "Debug CLI (webpacked)",
            "args": [
                "deploy",
                "c:/repos/kpn_esmee/vlocity/src/VlocityUITemplate",
                "-u", "dev10pro",
                "-v"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/vlocity-deploy/lib/**/*.js",
                "${workspaceFolder}/packages/salesforce/lib/**/*.js",
                "${workspaceFolder}/packages/core/lib/**/*.js",
                "${workspaceFolder}/packages/util/lib/**/*.js",
                "${workspaceFolder}/packages/cli/dist/**/*.js"
            ], 
            "preLaunchTask": "watch-cli-webpack",
            "smartStep": true,
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "showAsyncStacks": true,
            "stopOnEntry": true,
            "program": "${workspaceRoot}/packages/cli/lib/index.js",
            "name": "Debug CLI (node)",
            "args": [
                "deploy",
                "-u", "dev10pro",
                "--debug",
                "-v"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/vlocity-deploy/lib/**/*.js",
                "${workspaceFolder}/packages/salesforce/lib/**/*.js",
                "${workspaceFolder}/packages/core/lib/**/*.js",
                "${workspaceFolder}/packages/util/lib/**/*.js",
                "${workspaceFolder}/packages/cli/lib/**/*.js"
            ], 
            "preLaunchTask": "watch-cli",
            "smartStep": true,
            "sourceMaps": true
        },
        {
            "name": "Run Tests (vscode)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test"
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ], 
            "skipFiles": [
                "<node_internals>/**/*.js",
                "async_hooks.js",
                "inspector_async_hook.js"
            ],
            "preLaunchTask": "build-cli",
            "stopOnEntry": false,
            "sourceMaps": true
        },
        {
            "name": "Debug: Build Commands",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceRoot}/build/buildCommands.ts", "./package.json", "./commands.yaml"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_IGNORE": "false"
            }
        },
        {
            "name": "Debug: Webpack Build",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "build:debug"
            ],
            "cwd": "${workspaceRoot}/packages/vscode-extension",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}
