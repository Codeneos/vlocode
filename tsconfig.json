{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019",
            "es2020.bigint",
            "es2020.string",
            "es2020.symbol.wellknown",
            "es2021.string",
            "DOM"
        ],
        "outDir": "out",
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@vlocode/core": ["./packages/core"],
            "@vlocode/util": ["./packages/util"],
            "@vlocode/salesforce": ["./packages/salesforce"],
            "@vlocode/vlocity": ["./packages/vlocity"],
            "@vlocode/vlocity-deploy": ["./packages/vlocity-deploy"],
            "@vlocode/omniscript": ["./packages/omniscript"]
        }
    }
}
