{
  "useNx": false,
  "version": "0.16.35",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "gitRemote": "origin",
      "conventionalCommits": true,
      "syncWorkspaceLock": true,
      "message": "[skip ci] publish version %v",
      "changelogHeaderMessage": "## Vlocity/Salesforce Integration for VSCode"
    },
    "run": {
      "cmdDryRun": false
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/helpers/**",
    "**/*.md",
    ".vscode",
    ".github"
  ]
}
