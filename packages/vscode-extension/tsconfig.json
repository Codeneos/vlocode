{
    "extends": "../../tsconfig",
    "compilerOptions": {
        "outDir": "lib",
        "sourceMap": true,
        "declaration": false,
        "baseUrl": ".",
        "paths": {
            "@root/*": ["src/*"],
            "@constants": ["src/constants"],
            "@util/*": ["src/lib/util/*"],
            "@lib/*": ["src/lib/*"],
            "@logging/*": ["src/lib/logging/*"],
            "@events/*": ["src/events/*"],
            "@commands/*": ["src/commands/*"]
        },
        "types": ["node", "webpack-env"]
    },
    "include": ["src/**/*", "weboack/**/*", "types/**/*"],
    "references": [
        { "path": "../util" },
        { "path": "../core" },
        { "path": "../salesforce" },
        { "path": "../vlocity-deploy" }
    ]
}
