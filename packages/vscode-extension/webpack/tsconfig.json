{
    "extends": "../../../tsconfig",
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "bundler",
        "outDir": "lib",
        "sourceMap": true,
        "declaration": false,
        "allowArbitraryExtensions": true,
        "baseUrl": "../src",
        "rootDirs": ["../../", "../../../"],
        "typeRoots": ["../node_modules/@types", "../types"]
    },
    "include": ["../src/**/*.ts", "../types/*.d.ts"],
    "exclude": ["../src/**/*.test.ts"]
}
